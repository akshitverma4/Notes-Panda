<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.example.android.notespanda.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/action_notesFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>
    <fragment
        android:id="@+id/remindersFragment"
        android:name="com.example.android.notespanda.RemindersFragment"
        android:label="Reminders"
        tools:layout="@layout/fragment_reminders" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.android.notespanda.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.android.notespanda.AddFragment"
        android:label="Add Notes"
        tools:layout="@layout/fragment_add" />
</navigation>